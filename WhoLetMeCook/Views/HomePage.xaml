<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:WhoLetMeCook.Models"
             xmlns:viewmodels="clr-namespace:WhoLetMeCook.ViewModels"
             x:Class="WhoLetMeCook.Views.HomePage"
             x:DataType="viewmodels:HomeViewModel"
             Title="Who Let Me Cook!">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Spacing="1" Padding="20" Background="Brown">

                <!-- This is the new, single container for the entire dropdown -->
                <Border Stroke="Goldenrod" StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout>
                        <!-- The Tappable Header -->
                        <Grid ColumnDefinitions="*, Auto" Padding="10, 8">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleCategoryListCommand}" />
                            </Grid.GestureRecognizers>
                            <Label Grid.Column="0" Text="Browse Categories" TextColor="NavajoWhite" FontAttributes="Bold" FontSize="Medium" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="▼" VerticalOptions="Center" FontSize="12">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsCategoryListVisible}" Value="True">
                                        <Setter Property="Text" Value="▲" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>

                        <!-- The Category Bubbles Container -->
                        <FlexLayout x:Name="CategoryBubblesContainer"
                                    BindableLayout.ItemsSource="{Binding Categories}"
                                    Wrap="Wrap" JustifyContent="Start" AlignItems="Start"
                                    Padding="5"
                                    IsVisible="False"
                                    Opacity="0">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="models:Category">
                                    <Border Stroke="Goldenrod" Background="Wheat" StrokeThickness="1" Padding="12,8" Margin="2">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="16"/>
                                        </Border.StrokeShape>
                                        <Label Text="{Binding strCategory}" TextColor="Sienna"/>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, Path=GoToRecipesCommand}"
                                                                  CommandParameter="{Binding .}" />
                                        </Border.GestureRecognizers>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- "Today's hot suggestion" Section -->
                <Label Text="Today's Hot Suggestions"
                       FontSize="Title"
                       FontAttributes="Bold"
                       Margin="0,20,0,0" />

                <!-- The list of suggested recipes -->
                <CollectionView ItemsSource="{Binding SuggestedMeals}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Meal">
                            <Border Padding="10" Margin="1, 5" Stroke="Goldenrod" StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                                    <Label Grid.Column="0" Padding="10" Text="{Binding strMeal}" VerticalOptions="Center" FontAttributes="Bold" FontSize="Medium"/>
                                    <Image Grid.Column="1" Margin="10, 2" Source="{Binding strMealThumb}" Aspect="Fill" HeightRequest="80" WidthRequest="140"/>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, Path=GoToRecipeDetailCommand}"
                                                              CommandParameter="{Binding .}" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" Color="Orange"/>
    </Grid>
</ContentPage>
