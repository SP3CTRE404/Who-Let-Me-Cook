<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WhoLetMeCook.ViewModels"
             x:Class="WhoLetMeCook.Views.RecipeDetailPage"
             x:DataType="viewmodels:RecipeDetailViewModel"
             Title="{Binding Recipe.strMeal}"
             BackgroundColor="Brown">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Image Aspect="AspectFill"
                   HeightRequest="250"
                   Source="{Binding Recipe.strMealThumb}" />
            <Label Text="{Binding Recipe.strMeal}"
                   FontSize="Header"
                   FontAttributes="Bold"
                   TextColor="NavajoWhite"/>
            <Label Text="{Binding Recipe.strCategory, StringFormat='Category: {0}'}"
                   FontSize="Subtitle"
                   TextColor="Wheat"/>

            <Label Text="Instructions"
                   FontSize="Title"
                   FontAttributes="Bold"
                   TextColor="NavajoWhite"
                   Margin="0,20,0,5"/>
            <Label Text="{Binding Recipe.strInstructions}" TextColor="Wheat" />

            <!-- This section displays the ingredients list -->
            <Label Text="Ingredients"
                   FontSize="Title"
                   FontAttributes="Bold"
                   TextColor="NavajoWhite"
                   Margin="0,20,0,5"/>

            <!-- FIX: Replaced CollectionView with a more reliable BindableLayout -->
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Ingredients}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" Margin="0,2" TextColor="Wheat"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
