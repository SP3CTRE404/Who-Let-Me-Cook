<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:WhoLetMeCook.Models"
             xmlns:viewmodels="clr-namespace:WhoLetMeCook.ViewModels"
             x:Class="WhoLetMeCook.Views.CategoriesPage"
             x:DataType="viewmodels:CategoriesViewModel"
             Title="Browse All"
             BackgroundColor="Brown">
    <Grid RowDefinitions="Auto, *">
        <!-- Filter Buttons -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Padding="10" HorizontalOptions="Center">

            <Button Text="DISH" 
                    Command="{Binding SetCurrentFilterCommand}" 
                    CommandParameter="Category" 
                    BackgroundColor="Transparent" 
                    TextColor="Gold"
                    TextTransform="Uppercase"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    BorderWidth="2"
                    BorderColor="Goldenrod">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsCategoryFilterVisible}" Value="True">
                        <Setter Property="BackgroundColor" Value="Goldenrod"/>
                        <Setter Property="TextColor" Value="Black"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>
            
            <Button Text="Cuisine" 
                    Command="{Binding SetCurrentFilterCommand}" 
                    CommandParameter="Cuisine"
                    BackgroundColor="Transparent"
                    TextColor="Gold"
                    TextTransform="Uppercase"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    BorderWidth="2"
                    BorderColor="Goldenrod">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsCuisineFilterVisible}" Value="True">
                        <Setter Property="BackgroundColor" Value="Goldenrod"/>
                        <Setter Property="TextColor" Value="Black"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>

        </HorizontalStackLayout>

        <!-- Category List -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}" IsVisible="{Binding IsCategoryFilterVisible}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Category">
                    <Border Padding="10" Margin="20, 5" Stroke="Goldenrod" StrokeThickness="2">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="15">
                            <Label Grid.Column="0" Padding="10" Text="{Binding strCategory}" VerticalOptions="Center" FontAttributes="Bold" FontSize="Large" TextColor="NavajoWhite"/>
                            <Image Grid.Column="1" Margin="10, 5" Source="{Binding strCategoryThumb}" Aspect="Center" HeightRequest="80" WidthRequest="140" />
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CategoriesViewModel}}, Path=GoToRecipesCommand}" CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Cuisine (Area) List -->
        <!-- Cuisine (Area) List -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Areas}" IsVisible="{Binding IsCuisineFilterVisible}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Areas">
                    <Border Padding="10" Margin="10,5" Stroke="Goldenrod" StrokeThickness="2">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <!-- NEW: Using a Grid to position the flag and the name -->
                        <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15">
                            <Image Grid.Column="0"
                                   Source="{Binding FlagUrl}"
                                   HeightRequest="30"
                                   WidthRequest="40"                                   Aspect="AspectFill" />
                            <Label Grid.Column="1"
                                   Text="{Binding strAreas}" 
                                   VerticalOptions="Center" 
                                   FontAttributes="Bold" 
                                   TextColor="NavajoWhite" 
                                   FontSize="Medium" />
                        </Grid>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CategoriesViewModel}}, Path=GoToRecipesCommand}" CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <ActivityIndicator Grid.Row="1" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" Color="Orange"/>
    </Grid>
</ContentPage>
