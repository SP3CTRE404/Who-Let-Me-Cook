<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:WhoLetMeCook.Models"
             x:Class="WhoLetMeCook.Views.RecipePage">

    <Grid RowDefinitions="Auto, *">
        <SearchBar Grid.Row="0"
                   Placeholder="Search for a recipe..."
                   Text="{Binding SearchText}"
                   SearchButtonPressed="OnSearchButtonPressed"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Meals}"
                        SelectionMode="Single"
                        SelectionChanged="OnRecipeTapped">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Meal">
                    <Border Padding="10" Margin="10" Stroke="LightGray" StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="5,5" Opacity="0.2"/>
                        </Border.Shadow>
                        <Grid RowDefinitions="Auto, *" RowSpacing="5">
                            <Image Grid.Row="0"
                                   Source="{Binding strMealThumb}"
                                   Aspect="AspectFill"
                                   HeightRequest="150"/>
                            <Label Grid.Row="1"
                                   Text="{Binding strMeal}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ActivityIndicator Grid.RowSpan="2"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Color="Wheat" />
    </Grid>
</ContentPage>
